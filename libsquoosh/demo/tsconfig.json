{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "target":"ESNext",
    "module":"ESNext",
    "moduleResolution": "node",
    "lib": ["ESNext", "DOM"],
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "declaration": true,
    // Ensure that Babel can safely transpile files in the TypeScript project
    "isolatedModules": true
  },
  "include": [
    "../src/**/*",
    "../../codecs/**/*",
    "src/**/*"
  ]
}
